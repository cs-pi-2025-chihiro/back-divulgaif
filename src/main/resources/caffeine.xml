<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107">

    <!-- Default cache configuration -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache-template>

    <!-- Entity caches -->
    <cache alias="br.com.divulgaifback.modules.users.entities.User" uses-template="default">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <heap>500</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.users.entities.Author" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>300</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.users.entities.Role" uses-template="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>100</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Work" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Label" uses-template="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>200</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Link" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>500</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.WorkType" uses-template="default">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <heap>50</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.WorkStatus" uses-template="default">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <heap>50</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.History" uses-template="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>500</heap>
    </cache>

    <!-- Collection caches -->
    <cache alias="br.com.divulgaifback.modules.users.entities.User.roles" uses-template="default">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <heap>500</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Work.labels" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Work.links" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Work.authors" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="br.com.divulgaifback.modules.works.entities.Label.works" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap>500</heap>
    </cache>

    <!-- Query cache -->
    <cache alias="default-query-results-region" uses-template="default">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="default-update-timestamps-region" uses-template="default">
        <expiry>
            <none/>
        </expiry>
        <heap>5000</heap>
    </cache>

</config>

